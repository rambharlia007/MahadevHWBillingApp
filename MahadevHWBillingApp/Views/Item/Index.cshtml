<style>
    .pointer {
        cursor: pointer;
    }
</style>

<div id="app">
    <div class="card" style="margin-top:15px;">
        <div class="card-body">
            <table class="table text-secondary" style="font-size:14px;">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Unit</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="item in items">
                        <td>{{item.Name}}</td>
                        <td>{{item.Category}}</td>
                        <td>{{item.Unit}}</td>
                        <td>{{item.Amount}}</td>
                        <td><i class="fa fa-edit pointer" v-on:click="editItem(item)"></i></td>
                        <td><i class="fa fa-trash pointer" v-on:click="deleteItem(item.Id)"></i></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- The Modal -->
    <div class="modal" id="myModal">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Modal Heading</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                            <form>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Name</label>
                                    <div class="col-sm-10">
                                        <input v-model="item.Name" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Category</label>
                                    <div class="col-sm-10">
                                        <input v-model="item.Category" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Unit</label>
                                    <div class="col-sm-10">
                                        <input v-model="item.Unit" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Amount</label>
                                    <div class="col-sm-10">
                                        <input v-model="item.Amount" type="text" class="form-control">
                                    </div>
                                </div>
                            </form>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>

                </div>
        </div>
    </div>
</div>
<script>

    $(document).ready(function () {
        var obj = {
            items: [],
            item: {}
        }

        new Vue({
            el: '#app',
            data: obj,
            methods: {
                editItem: function (item) {
                    $("#myModal").modal("show");
                    this.item = item;
                },
                deleteItem: function (id) {

                }
            },
            beforeMount() {
                var self = this;
                $.get("/item/GetData", function (data, status) {
                    self.items = data;
                });
            },
        })
    });


</script>