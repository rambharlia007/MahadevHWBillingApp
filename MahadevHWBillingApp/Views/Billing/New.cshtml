                        <table class="table table-sm table-clear">
                            <tbody>
                                <tr>
                                    <td class="left">
                                        <strong>Subtotal</strong>
                                    </td>
                                    <td class="right">{{Number(subTotal).toLocaleString()}}</td>
                                </tr>
                                <tr>
                                    <td class="left">
                                        <strong>TAX</strong>
                                    </td>
                                    <td class="right">{{Number(tax).toLocaleString()}}</td>
                                </tr>
                                <tr>
                                    <td class="left">
                                        <strong>Total</strong>
                                    </td>
                                    <td class="right">
                                        <strong>{{Number(total).toLocaleString()}}</strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                </div>

            </div>
        </div>

    </div>
</div>

<script>
    $(document).ready(function () {

        var items = [];

        for (i = 0; i < 25; i++) {
            items.push({
                Name: "",
                Unit: "",
                Quantity: "",
                CGST: "",
                SGST: "",
                Amount: "",
                BasePrice: "",
                GST: ""
            })
        }


        //for (i = 0; i < 25; i++) {
        //    items.push({
        //        Name: "xxw",
        //        Unit: "100 ml",
        //        Quantity: "5",
        //        CGST: "25",
        //        SGST: "35",
        //        Amount: "1234",
        //        BasePrice: "456",
        //        GST: "18"
        //    })
       // }

        var obj = {
            alertFailureMessage: "",
            alertMessage: "",
            items: items,
            isPreview: false,
            isSelect2Rendered:true
        }
        new Vue({
            el: '#app',
            data: obj,
            methods: {
                calculatePerItemAmount: function (index) {
                    var ref = this.items[index];
                    var taxInPercentage = ref.GST / 2;
                    ref.Amount = ref.BasePrice * ref.Quantity;
                    var tax = Math.round(((ref.Amount * taxInPercentage) / 100) * 100) / 100;
                    ref.CGST = tax;
                    ref.SGST = tax;
                },
                showOrHidePreview: function (value) {
                    this.isPreview = value;
                },
                print: function () {
                    window.print();
                },
                beforePrint: function () {
                    alert("BeforePrint");
                },
                afterPrint: function () {
                    alert("Afetr Print");
                },
                initSelect2: function () {
                    var self = this;
                    $(".product-select-2").select2({
                        ajax: {
                            url: "/item/GetDataBySearch",
                            dataType: 'json',
                            delay: 250,
                            data: function (params) {
                                return {
                                    q: params.term,
                                    page: params.page
                                };
                            },
                            processResults: function (data, params) {
                                var products = [];
                                data.forEach((product) => {
                                    products.push({
                                        id: product.Id,
                                        text: product.Name,
                                        BasePrice: product.Amount,
                                        CGST: product.CGST,
                                        SGST: product.SGST
                                    })
                                });

                                return {
                                    results: products
                                };
                            },
                            cache: true
                        },
                        placeholder: 'Search for a Product',
                        minimumInputLength: 1

                    });
                    $('.product-select-2').on('select2:select', function (e) {
                        let index = parseInt($(this).parent().attr('data-id'));
                        let data = e.params.data;

                        self.items[index].Name = data.text;
                        self.items[index].BasePrice = data.BasePrice;
                        self.items[index].GST = data.CGST + data.SGST;
                        self.items[index].Quantity = 1;
                        self.calculatePerItemAmount(index);
                    });
                }
            },
            computed: {
                subTotal: function () {
                    var totalAmount = 0;
                    this.items.forEach(function (item) {
                        totalAmount += parseFloat(item.Amount || 0);
                    })
                    return totalAmount;
                },
                tax: function () {
                    var totalTax = 0;
                    this.items.forEach(function (item) {
                        totalTax += Math.round((parseFloat(item.CGST || 0) + parseFloat(item.SGST || 0)) * 100) / 100; 
                    })
                    return totalTax;
                },
                total: function () {
                    return Math.round((parseFloat(this.subTotal) + parseFloat(this.tax)) * 100) / 100;
                }
            },
            mounted() {

                var self = this;
                self.initSelect2();
                window.onbeforeprint = self.beforePrint;
                window.onafterprint = self.afterPrint;
            }
        })
    });
 </script>


